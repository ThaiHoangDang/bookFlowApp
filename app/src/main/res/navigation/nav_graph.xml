<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/landingFragment">

    <fragment
        android:id="@+id/landingFragment"
        android:name="com.rmit.bookflowapp.fragment.LandingFragment"
        android:label="fragment_landing"
        tools:layout="@layout/fragment_landing">
        <action
            android:id="@+id/action_landingFragment_to_authentication_fragment"
            app:destination="@id/authenticationFragment" />
        <action
            android:id="@+id/action_landingFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/authenticationFragment"
        android:name="com.rmit.bookflowapp.fragment.AuthenticationFragment"
        android:label="authentication_fragment"
        tools:layout="@layout/fragment_authentication">
        <action
            android:id="@+id/action_authenticationFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.rmit.bookflowapp.fragment.SignUpFragment"
        android:label="signup_fragment"
        tools:layout="@layout/fragment_sign_up" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rmit.bookflowapp.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.rmit.bookflowapp.fragment.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.rmit.bookflowapp.fragment.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library" />
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.rmit.bookflowapp.fragment.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more">
        <action
            android:id="@+id/action_moreFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment"
            app:popUpTo="@id/landingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.rmit.bookflowapp.fragment.BookDetailFragment"
        android:label="fragment_book_detail"
        tools:layout="@layout/fragment_book_detail" />
    <fragment
        android:id="@+id/messageListFragment"
        android:name="com.rmit.bookflowapp.fragment.MessageListFragment"
        android:label="fragment_message_list"
        tools:layout="@layout/fragment_message_list" />
    <fragment
        android:id="@+id/messageSearchFragment"
        android:name="com.rmit.bookflowapp.fragment.MessageSearchFragment"
        android:label="fragment_message_search"
        tools:layout="@layout/fragment_message_search" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.rmit.bookflowapp.fragment.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" />
    <fragment
        android:id="@+id/newReviewFragment"
        android:name="com.rmit.bookflowapp.fragment.NewReviewFragment"
        android:label="fragment_new_review"
        tools:layout="@layout/fragment_new_review" />
    <fragment
        android:id="@+id/genreFragment"
        android:name="com.rmit.bookflowapp.fragment.GenreFragment"
        android:label="fragment_genre"
        tools:layout="@layout/fragment_genre" />
    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.rmit.bookflowapp.fragment.PostDetailFragment"
        android:label="fragment_post_detail"
        tools:layout="@layout/fragment_post_detail" />
    <fragment
        android:id="@+id/adminHomeFragment"
        android:name="com.rmit.bookflowapp.fragment.AdminHomeFragment"
        android:label="fragment_admin_home"
        tools:layout="@layout/fragment_admin_home" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.rmit.bookflowapp.fragment.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/readingTimerFragment"
        android:name="com.rmit.bookflowapp.fragment.ReadingTimerFragment"
        android:label="fragment_reading_timer"
        tools:layout="@layout/fragment_reading_timer" />
    <fragment
        android:id="@+id/findBookFragment"
        android:name="com.rmit.bookflowapp.fragment.FindBook"
        android:label="fragment_find_book"
        tools:layout="@layout/fragment_find_book" />

</navigation>
