<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/searchBookCardHolder"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/searchBookCoverHolder"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/searchBookCover"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                tools:srcCompat="@color/neutral_100" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/searchBookCoverHolder">

            <RatingBar
                android:id="@+id/cardBookRating2"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchAuthor"
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:numStars="5"
                android:rating="4.5"
                android:scaleX="1"
                android:scaleY="1"
                android:stepSize="0.1" />

            <TextView
                android:id="@+id/searchAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="De Men Phieu Luu Ky"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/searchAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchAuthorName"
                android:text="To Hoai"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/searchBookCardHolder"
        android:background="?android:attr/listDivider" />

</RelativeLayout>