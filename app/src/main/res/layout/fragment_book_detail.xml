<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BookDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bookDetailIntroSection"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H,6:9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/demenphieuluuky" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.9"
                        android:background="@color/dark_blue" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/bookDetailNavbar"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <ImageButton
                                android:id="@+id/back"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:backgroundTint="#00002C43"
                                android:paddingLeft="20dp"
                                android:src="@drawable/baseline_arrow_back_ios_24"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/bookDetailBookCover"
                            android:layout_width="162dp"
                            android:layout_height="243dp"
                            android:layout_below="@id/bookDetailNavbar"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="16dp">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/demenphieuluuky" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/bookDetailBookName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bookDetailBookCover"
                            android:layout_marginTop="24dp"
                            android:paddingLeft="32dp"
                            android:paddingRight="32dp"
                            android:text="De Men Phieu Luu Ky"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bookDetailBookAuthor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bookDetailBookName"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-light"
                            android:paddingLeft="32dp"
                            android:paddingRight="32dp"
                            android:text="by To Hoai"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_below="@+id/bookDetailBookAuthor"
                            android:layout_marginHorizontal="32dp"
                            android:layout_marginTop="32dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="10K"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="26sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView13"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Reads"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="4.2"
                                    android:textAlignment="center"
                                    android:textColor="@color/orange"
                                    android:textSize="26sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Score"
                                    android:textAlignment="center"
                                    android:textColor="@color/orange" />

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView11"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="132"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="26sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Reviews"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF" />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingTop="32dp"
                android:paddingRight="16dp"
                android:paddingBottom="32dp">

                <RelativeLayout
                    android:id="@+id/bookDetailDescriptionSection"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bookDetailDescriptionTitle"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Laoreet id donec ultrices tincidunt. Malesuada bibendum arcu vitae elementum curabitur vitae nunc sed velit. Eget nullam non nisi est sit amet facilisis magna. " />

                    <TextView
                        android:id="@+id/bookDetailDescriptionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Description"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/bookDetailDescriptionSection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <include layout="@layout/genre_tag" />

                        <include layout="@layout/genre_tag" />

                        <include layout="@layout/genre_tag" />
                    </LinearLayout>
                </ScrollView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/bookDetailReviewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Reviews"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/BookDetailRatingSummary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/bookDetailReviewTitle"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/bookDetailTotalScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4.2/5.0"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/bookDetailRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bookDetailTotalScore"
                        android:layout_centerHorizontal="true"
                        android:max="5"
                        android:progress="4"
                        android:scaleX="0.6"
                        android:scaleY="0.6" />

                    <LinearLayout
                        android:id="@+id/fiveStarRating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/bookDetailRating"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="5 star" />

                        <ProgressBar
                            android:id="@+id/progressBar5"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="42"
                            android:scrollbarSize="8dp" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="42%" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fourStarRating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/fiveStarRating"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="4 star" />

                        <ProgressBar
                            android:id="@+id/progressBar4"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="28"
                            android:scrollbarSize="8dp" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="28%" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/threeStarRating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/fourStarRating"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="3 star" />

                        <ProgressBar
                            android:id="@+id/progressBar3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="10"
                            android:scrollbarSize="8dp" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="10%" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/twoStarRating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/threeStarRating"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="2 star" />

                        <ProgressBar
                            android:id="@+id/progressBar2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="18"
                            android:scrollbarSize="8dp" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="18%" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/oneStarRating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/twoStarRating"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="1 star" />

                        <ProgressBar
                            android:id="@+id/progressBar1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="2"
                            android:scrollbarSize="8dp" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="2%" />
                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/BookDetailRatingSummary"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/blue"
                    android:text="Write A Review" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>